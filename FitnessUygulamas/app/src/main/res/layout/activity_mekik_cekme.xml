<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCBC"
    tools:context=".MekikCekmeActivity">

    <TextView
        android:id="@+id/zamanlayici1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalan süreniz 30 sn"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/mekikSayisiTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mekik sayısı: 0"
        android:layout_below="@id/zamanlayici1TV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/kalori1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yakılan Kalori: 0"
        android:layout_below="@id/mekikSayisiTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/start1button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Başlat"
        android:layout_below="@id/kalori1TV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="19sp"
        android:backgroundTint="#77C4E6"/>

    <Button
        android:id="@+id/stop1button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dur"
        android:layout_below="@id/start1button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="19sp"
        android:backgroundTint="#77C4E6" />
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/komikmekikhareketi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stop1button"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mekikkomik"
        />
</RelativeLayout>