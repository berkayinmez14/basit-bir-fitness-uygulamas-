<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#ECA4BC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BisikletHareketiActivity">

    <TextView
        android:id="@+id/zamanlayici3TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalan süre 30 sn"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/mesaj1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="32sp"
        android:layout_below="@+id/zamanlayici3TV"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/kalori3TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yakılan Kalori: 0.00"
        android:textSize="18sp"
        android:layout_below="@id/mesaj1TV"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/bisikletHareketi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/kalori3TV"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bisiklethareketigif"/>
</RelativeLayout>