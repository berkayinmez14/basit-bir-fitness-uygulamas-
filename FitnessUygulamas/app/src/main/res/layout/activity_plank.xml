<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#DDB891F1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlankActivity">

    <TextView
        android:id="@+id/zamanlayici2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalan süreniz 30 sn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/mesajTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zamanlayici2TV"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:layout_marginTop="48dp"
        android:text="" />

    <TextView
        android:id="@+id/kalori2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mesajTV"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        android:text="Yakılan kalori: 0" />
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/plankHareketi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/kalori2TV"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/plankgif"/>
</RelativeLayout>